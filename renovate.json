{
    "extends": [
        "config:base",
        ":automergeMinor"
    ],
    "schedule": [
        "before 8:00am every sunday"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "php"
            ],
            "allowedVersions": "<= 8.2"
        },
        {
            "matchPackageNames": [
                "postgres"
            ],
            "allowedVersions": "<= 15.1"
        },
        {
            "matchPackageNames": [
                "laravel/framework"
            ],
            "allowedVersions": "<= 9"
        }
    ]
}
